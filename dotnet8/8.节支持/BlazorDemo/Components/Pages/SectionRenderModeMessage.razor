@using System.Runtime.InteropServices
@rendermode InteractiveServer

<div class="card">
    <div class="card-header">
        LevelName
    </div>
    <div class="card-body">
        <button class="btn btn-primary" @onclick="UpdateMessage">SharedMessage中点击</button>
        <p>
            @message
        </p>
    </div>
    <div class="card-footer">
        OSDescription:@RuntimeInformation.OSDescription
    </div>
</div>

<SectionContent SectionName="section-render-mode-static">
    <div class="card">
        <div class="card-header">
            来自SectionRenderModeMessage组件，SectionName="section-render-mode-static"
        </div>
        <div class="card-body">
            <button class="btn btn-primary" @onclick="UpdateMessage">Static点击</button>
        </div>
    </div>
</SectionContent>

<SectionContent SectionName="section-render-mode-interactive">
    <div class="card">
        <div class="card-header">
            来自SectionRenderModeMessage组件，SectionName="section-render-mode-interactive"
        </div>
        <div class="card-body">
            <button class="btn btn-primary" @onclick="UpdateMessage">Interactive点击</button>
        </div>
    </div>
</SectionContent>

@code {
    private string message = "没有点击";
    private int clickCount = 0;

    private void UpdateMessage()
    {
        message = $"已经点击 {++clickCount} 次";
    }
}